{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "typeRoots": [
      "./drafts-type-individual"
    ],
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true
  },
  "include": [
    "./drafts-type-individual/*.d.ts",
    "./src/**/*.ts"
  ]
}
